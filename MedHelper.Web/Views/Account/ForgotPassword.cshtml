@model MedHelper.Web.Models.ForgetPasswordViewModel
@{
}
<link rel="stylesheet" href="~/css/ForgetPassword.css" type="text/css" />
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<div class="card">
    <div class="card-center">
        <img class="logo-img" src="~/LogoRound.jpg" alt="" />
        <h1> Забули пароль? </h1>
        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
        <div class="centured">
            <hr>
            <h3> Будь ласка, вкажіть Ваше ім'я користувача або електронну адресу. Ви отримаєте повідомлення із подальшими інструкціями щодо відновлення паролю.</h3>
            <hr>
            <div class="container">
                <div>
                    <label> Username or email address: </label>
                    @Html.TextBoxFor(m => m.Email,"", new { @class = "form-control", @placeholder = "Email" })
                </div>
            </div>
        </div>

        <div>
            <input type="submit" name="submit" class="btn btn-primary" value="Отримати новий пароль" />

        </div>
        </form>

    </div>
    <div class="link">
        <p><a href="/Account/Login">Log in</a></p>
    </div>
</div>
